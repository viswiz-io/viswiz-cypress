{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"lib": ["ES2020"],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"noEmit": false,
		"noErrorTruncation": true,
		"outDir": "./lib",
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2020",
		"types": ["node"],
		"typeRoots": ["./@types", "./node_modules/@types"]
	},
	"include": ["./"]
}
